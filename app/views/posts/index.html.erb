<h1>All Posts</h1>
<p>You are logged in as <%= @user.name %></p>

<% @posts.each do |post| %>
    <div class="well">
		<h3><%= link_to post.title, post %></h3>
		<p><%= post.content[0..100] %>... (more) </p>
		<p><span style="font: italic 10px serif;">Last updated: <%= post.updated_at %></span> &emsp; | &emsp; <span style="color: #cc0000;"><%= post.comments.count %> comments</span></p>
		<p>
		  <% if can? :update, Post %>
			<%= link_to 'Edit', edit_post_path(post), { :class => "btn btn-warning" } %>
		  <% end %>
		  <% if can? :destroy, Post %>
		    <%= link_to 'Delete', post, class: 'btn btn-danger', method: :delete, confirm: 'Are you sure?' %>
		  <% end %>
		</p>
	</div>
<% end %>
<%= link_to 'Older Posts', posts_path(page: 1), { :class => "btn btn-large btn-block" } %>


<hr />
<% if can? :create, @post %>
  <%= link_to 'New Post', new_post_path, { :class => "btn btn-success" } %>
<%end %>
