<div>
	<h3>Posts
		<div class='pull-right'> 
			<%= form_tag posts_path, :method => :get, :remote => true, :id => "posts_search" do %>
				<%= text_field_tag :search, params[:search], :label => false%>
				<span class="add-on"><i class="icon-search icon-white"></i></span>
			<% end %>
		</div>
	</h3>
</div>

<div id="postlist"><%= render 'posts' %></div>


<hr />
<% if can? :create, @post %>
  <%= link_to 'New Post', new_post_path, { :class => "btn btn-success" } %>
<%end %>
