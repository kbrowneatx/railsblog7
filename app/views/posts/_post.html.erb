<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :required => true, :autofocus => true, :input_html => { :class => "span5" } %>
    <%= f.input :content, :as => :text, :input_html => { :class => "span6", :rows => 12} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit Post", { :class => "btn btn-success" } %>
	<%= link_to "Cancel and return to All Posts", posts_path, { :class => "btn btn-primary" } %>
  </div>
<% end %>
